extends ../layout/index

block content

    a(href="/")
        .mx-auto.max-w-sm
            button(class="w-full py-4 bg-indigo-500 text-white font-bold text-center text-4xl uppercase rounded-lg hover:bg-indigo-600") Inicio

    .mt-10
        h1.text-center.text-6xl.font-bold.py-10 #{page}
    
    .mt-8.mx-auto.max-w-md
        .shadow.bg-white.p-10.rounded-lg
            form(action="/uploadManualWeight" method="post" enctype="multipart/form-data") 
                input(type="file" name="manualWeight")
                button(type="submit" class=" w-full py-4 bg-indigo-500 text-white font-bold mt-10 text-center text-2xl uppercase rounded-lg hover:bg-indigo-600") Subir